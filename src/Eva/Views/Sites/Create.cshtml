@model EVA.Models.Site

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Site</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Clientid" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Clientid" class="form-control" asp-items="ViewBag.ClientID">
                    <option>--Select Facility Type--</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="SiteName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SiteName" class="form-control" />
                <span asp-validation-for="SiteName" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="SiteTypeID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="SiteTypeID" class="form-control" asp-items="ViewBag.SiteTypeID">
                    <option>--Select Facility Type--</option>
                </select>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="SiteAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SiteAddress" class="form-control" />
                <span asp-validation-for="SiteAddress" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="SiteSuburb" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SiteSuburb" class="form-control" />
                <span asp-validation-for="SiteSuburb" class="text-danger" />
            </div>
        </div>
       
        <div class="form-group">
            <label asp-for="SitePostCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SitePostCode" class="form-control" />
                <span asp-validation-for="SitePostCode" class="text-danger" />
            </div>
        </div>
      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
